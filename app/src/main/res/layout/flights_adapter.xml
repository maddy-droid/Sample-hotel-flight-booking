<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/holo_blue_light">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/airway_name_tv"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:gravity="center"
                android:layout_height="match_parent">
            </TextView>

            <Button
                android:id="@+id/price_name_tv"
                android:layout_width="0dp"
                android:layout_weight="0.50"
                android:textStyle="bold"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/departure_date_name_tv"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="match_parent">
            </TextView>

            <TextView
                android:id="@+id/arrival_date_name_tv"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="match_parent">
            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/departure_airport_name_tv"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="match_parent">

            </TextView>



            <TextView
                android:id="@+id/arrival_airport_name_tv"
                android:layout_width="0dp"
                android:layout_weight=".50"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>




    </LinearLayout>
</androidx.cardview.widget.CardView>